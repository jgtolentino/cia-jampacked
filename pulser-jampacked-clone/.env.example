# JamPacked Creative Intelligence Clone - Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_ENV=production
API_DEBUG=false
API_WORKERS=4

# Claude API
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# OpenAI (for embeddings)
OPENAI_API_KEY=your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=1536

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=creative_user
POSTGRES_PASSWORD=securepassword
POSTGRES_DB=campaign_db
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=40

# ChromaDB Vector Database
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_AUTH_PROVIDER=token
CHROMA_AUTH_TOKEN=your-secure-token-here
CHROMA_TENANT=default_tenant
CHROMA_DATABASE=creative_intelligence

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Security
JWT_SECRET_KEY=your-very-long-random-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY_HEADER=X-API-Key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# S3 Storage (for creative assets)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=jampacked-creative-assets
S3_ENDPOINT_URL=

# Feature Flags
ENABLE_AB_TESTING=true
ENABLE_AWARD_PREDICTION=true
ENABLE_REAL_TIME_OPTIMIZATION=true
ENABLE_ASYNC_PROCESSING=true

# External Services
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
SLACK_WEBHOOK_URL=

# Grafana (for monitoring dashboard)
GRAFANA_PASSWORD=admin

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=team@yourcompany.com

# Batch Processing
BATCH_SIZE=100
MAX_CONCURRENT_ANALYSES=10
ANALYSIS_TIMEOUT_SECONDS=900

# Development Settings (override in production)
DEV_MODE=false
HOT_RELOAD=false
MOCK_EXTERNAL_APIS=false